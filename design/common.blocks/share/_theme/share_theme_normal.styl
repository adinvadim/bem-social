.share_theme_normal
{
    font-family: Arial, Helvetica, sans-serif;

    position: relative;

    display: inline-block;

    padding: 0.2em 0.6em;
    margin: 0;

    user-select: none;

    color: #fff;
    text-decoration: none;

    border: 0;
    border-radius: 3px;
    outline: 0;

    text-align: center;
    white-space: nowrap;


    .icon
    {
        width: 1.6em;
        height: 1.6em;
        margin: -0.5em 0 -0.5em -0.3em;
        fill: #fff;
    }

    .share__text
    {
        overflow: hidden;

        text-overflow: ellipsis;
        vertical-align: top;
    }
    .icon + .share__text
    {
        margin-left: 0.2em;
    }

    &.share_service_blogger { background-color: #f26300; }
    &.share_service_facebook { background-color: #3B5998; }
    &.share_service_google { background-color: #CC3732; }
    &.share_service_twitter { background-color: #00ACED; }
    &.share_service_vkontakte { background-color: #4D75A3; }

    &.share_size_s
    {
        font-size: 14px;
    }
    &.share_size_m
    {
        font-size: 16px;
    }
    &.share_size_l
    {
        font-size: 18px;
    }
    &.share_size_xl
    {
        font-size: 20px;
    }
}
