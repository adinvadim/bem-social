block('share').mod('service', 'odnoklassniki')(
    attrs()(function() {
        var params = this.ctx.js,
            uri = 'http://www.odnoklassniki.ru/dk?st.cmd=addShare&st.s=1';

        params.title        && (uri += '&st.comments=' + encodeURIComponent(params.title));
        params.url          && (uri += '&st._surl=' + encodeURIComponent(params.url));

        return this.extend(applyNext(), { href : uri });
    })
);
