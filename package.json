{
  "author": "Ivan Voischev",
  "name": "bem-social",
  "version": "0.0.1",
  "description": "BEM Social Components Library",
  "repository": {
    "type": "git",
    "url": "https://github.com/voischev/bem-social"
  },
  "keywords": [
    "bem",
    "social",
    "blocks"
  ],
  "engines": {
    "node": ">=0.10"
  },
  "dependencies": {
    "bem-environ": "~1.4.0"
  },
  "devDependencies": {
    "bem": "0.9.0",
    "bem-tools-autoprefixer": "0.0.3",
    "bower": "~1.3.5",
    "bower-npm-install": "~0.5.4",
    "stylus": "^0.47.1",
    "csscomb": "~2.0.5",
    "git-hooks": "0.0.6",
    "jscs": "1.5.3",
    "jshint": "2.3.0",
    "jshint-groups": "0.6.0"
  },
  "scripts": {
    "deps": "bower-npm-install",
    "build": "npm run deps",
    "lint": "jshint-groups && jscs . && csscomb -vl .",
    "unit": "npm run test-specs",
    "gemini": "npm run test-gemini",
    "test": "npm run build && npm run ${TEST_SCOPE:-test-all}",
    "test-all": "npm run lint && npm run unit && npm run test-tmpls && npm run gemini",
    "test-tmpls": "echo 'запускаем тесты на шаблоны'",
    "test-specs": "echo 'запускаем unit-тесты на JS'",
    "test-gemini": "echo 'запускаем тесты gemini'"
  },
  "private": true
}
